<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      
      spacing="20"
      alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #FFF3CF;">
    
    <!-- Title Section -->
    <Label text="Contact Us"
           style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: #AF5F35;" />
    
    <!-- Content Section -->
    <GridPane hgap="10" vgap="15" alignment="CENTER" style = "-fx-padding: 20px; -fx-background-color: white; -fx-background-radius: 15;-fx-effect: dropshadow(gaussian, rgba(102, 102, 102, 0.75), 10, 0.5, 0, 0);" maxWidth="600">
        <Label text="Your Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="nameField" promptText="Enter your name" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        
        <Label text="Your Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="emailField" promptText="Enter your email address" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        
        <Label text="Subject:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="subjectField" promptText="Enter the subject of your message" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        
        <Label text="Message:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextArea fx:id="messageArea" promptText="Enter your message" wrapText="true" prefHeight="100" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    </GridPane>
    
    <!-- Action Buttons -->
    <Button text="Submit"
            
            style="-fx-padding: 10 20; -fx-font-size: 15;  " />
    <Button text="Back to Home"
            
            style="-fx-padding: 10 20; -fx-background-color: #ccc; -fx-text-fill: black; -fx-font-size: 14;" />
</VBox>
